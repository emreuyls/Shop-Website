@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/assets/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <a class="site-logo " href="/"><img src="/assets/corporate/img/logos/logo-shop-red.png" alt="Metronic Shop UI"></a>
    </nav>
    <div class="container">
        <div class="card" style="width:50rem">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Adınız</label>
                    <input asp-for="Name" class="form-control" placeholder="Adınız">
                </div> 
                <div class="form-group">
                    <label for="exampleInputEmail1">Soyadınız</label>
                    <input asp-for="Surname" class="form-control" placeholder="Soyadınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email Adresi">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Kullanıcı adı</label>
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Şifre</label>
                    <input asp-for="Password" class="form-control" placeholder="Şifreniz">

                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <input asp-for="RePassword" class="form-control" placeholder="Şifre (Tekrar)">
                </div>
                <button type="submit" class="btn btn-primary">Kayıt ol</button>
            </form>
        </div>
    </div>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.js"></script>
</body>
</html>