                    </div>
                </div>
            </div>
            <!-- END SIDEBAR -->
            <!-- BEGIN CONTENT -->
            <div class="col-md-9 col-sm-7">
                <div class="product-page">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="product-main-image" style="position: relative; overflow: hidden;">
                                <img src="~/img/Product/@Model.Products.Picture" alt="Cool green dress with red bell" class="img-responsive" data-BigImgsrc="~/img/Product/@Model.Products.Picture">
                            </div>
                            <div class="product-other-images">
                                @foreach (var img in Model.Images)
                                {
                                    <a href="~/img/Product/@img.ImageName" class="fancybox-button" rel="photos-lib"><img alt="Berry Lace Dress" src="~/img/Product/@img.ImageName"></a>

                                }

                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <h1>@Model.Products.ProductName</h1>
                            <div class="price-availability-block clearfix">
                                <div class="price">
                                    <strong><span>₺</span>@Model.Products.UnitPrice</strong>
                                    <em>₺<span>@Model.Products.UnitPrice</span></em>
                                </div>
                                <div class="availability">
                                    Stok: <strong><b>@Model.Products.UnitsInStock</b> Stokta</strong>
                                </div>
                            </div>
                            <div class="description">
                                <p>
                                    @Model.Products.ProductDescription
                                </p>
                            </div>
                            <div class="product-page-options">
                                <div class="pull-left">
                                    <label class="control-label">Size:</label>
                                    <select class="form-control input-sm">
                                        <option>L</option>
                                        <option>M</option>
                                        <option>XL</option>
                                    </select>
                                </div>
                                <div class="pull-left">
                                    <label class="control-label">Color:</label>
                                    <select class="form-control input-sm">
                                        <option>Red</option>
                                        <option>Blue</option>
                                        <option>Black</option>
                                    </select>
                                </div>
                            </div>
                            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                <div class="product-page-cart">                                    
                                    <div class="product-quantity">
                                        <input type="hidden" name="ProductID" value="@Model.Products.ID" />
                                        <input id="product-quantity" name="quantity" type="text" value="1" readonly class="form-control input-sm">
                                    </div>
                                    @if (Model.Products.UnitsInStock == 0)
                                    {
                                        <button class="btn btn-primary disabled" type="submit">Sepete Ekle</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary" type="submit">Sepete Ekle</button>
                                    }

                                </div>
                            </form>
                            <div class="review">
                                <input type="range" value="4" step="0.25" id="backing4" style="display: none;">
