@model AccountModels
@{
    ViewData["Title"] = "Account";
}

<div class="main">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="index.html">Home</a></li>
            <li><a href="">Store</a></li>
            <li class="active">My Account Page</li>
        </ul>
        <!-- BEGIN SIDEBAR & CONTENT -->
        <div class="row margin-bottom-40">
            @Html.Partial("_profile_sidebar")
            <!-- BEGIN CONTENT -->
            <div class="col-md-9 col-sm-7">
                <h1>Kişisel Bilgiler</h1>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        Bilgileriniz Başarıyla Değiştirilmiştir.
                    </div>
                }
                <div class="content-form-page">
                    <form asp-action="Account" method="post" class="form-horizontal form-without-legend">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="first-name">Ad <span class="require">*</span></label>
                            <div class="col-lg-8">
                                <input asp-for="Name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="first-name">Soyad <span class="require">*</span></label>
                            <div class="col-lg-8">
                                <input asp-for="SurName" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="first-name">E-posta <span class="require">*</span></label>
                            <div class="col-lg-8">
                                <input asp-for="Email" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" for="first-name">Telefon <span class="require">*</span></label>
                            <div class="col-lg-8">
                                <input asp-for="Phone" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Checkboxes</label>
                            <div class=" form-check form-check-inline col-lg-8">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="True" />
                                <label class="form-check-label" for="exampleRadios1">
                                    Kadın
                                </label>
                                <input asp-for="Gender" class="form-check-input" type="radio" value="False" />
                                <label class="form-check-label" for="exampleRadios1">
                                    Erkek
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8 col-md-offset-2 padding-left-0 padding-top-20">
                                <button class="btn btn-primary" type="submit">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END SIDEBAR & CONTENT -->
    </div>
</div>