@model List<Products>
<div class="col-md-12 sale-product">
    <h2>Son Gelenler</h2>
    <div class="owl-carousel owl-carousel5">
        @foreach (var item in Model)
        {
        <div>
            <div class="product-item">
                <div class="pi-img-wrapper">
                    <img src="~/img/Product/@item.Picture" class="img-responsive" alt="Berry Lace Dress">
                    <div>
                        <a href="~/img/Product/@item.Picture" class="btn btn-default fancybox-button">Yaklaştır</a>
                        <a href="#product-pop-up" class="btn btn-default fancybox-fast-view">İncele</a>
                    </div>
                </div>
                <h3><a href="/@Uri.EscapeDataString(item.ProductName)-p-@item.StockCode">@item.ProductName</a></h3>
                <div class="pi-price">@item.UnitPrice.ToString("c")</div>
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="ProductID" value="@item.ID" />
                    <button type="submit" class="btn btn-default add2cart">Sepete Ekle</button>
                </form>
                <div class="sticker sticker-yeni"></div>
            </div>
        </div>

        }
    </div>
</div>